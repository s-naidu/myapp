stage('Build Bundle') {
  when { expression { return isDeployCandidate() } }
  steps {
    echo 'Building'
    script {
      VARIANT = getBuildType()
      sh "./gradlew -PstorePass=${STORE_PASSWORD} -Pkeystore=${KEYSTORE} -Palias=${KEY_ALIAS} -PkeyPass=${KEY_PASSWORD} bundle${VARIANT}"
    }
  }
}